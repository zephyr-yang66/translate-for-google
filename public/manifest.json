{
  "manifest_version": 3,
  "name": "DeepSeek 翻译",
  "version": "2.0.0",
  "description": "支持多种免费翻译API的浏览器扩展，安全、快速、可靠",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://fanyi-api.baidu.com/*",
    "https://libretranslate.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["drawer.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "DeepSeek 翻译",
    "default_popup": ""
  }
}

